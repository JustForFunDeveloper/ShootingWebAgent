@using ShootingWebAgent.DataModels
@model IEnumerable<ShootingWebAgent.DataModels.Match>

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Matches</h1>
    <div class="container">
        <div class="container">
            <div class="list-group">
                @foreach (var match in Model)
                {
                    <a asp-action="GoToMatch" asp-route-id="@match.MatchId" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="container">
                            <div class="row">
                                <div class="col col-2">
                                    <h5 class="mb-1">@match.MatchName</h5>
                                </div>
                                <div class="col text-right">
                                    @if (@match.MatchStatus.Equals(MatchStatus.Open))
                                    {
                                        <h4><span class="badge badge-success">Ongoing</span></h4>
                                    }
                                    else if (@match.MatchStatus.Equals(MatchStatus.Closed))
                                    {
                                        <h4><span class="badge badge-primary">Closed</span></h4>
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <small class="mb-1">Erstellt am:</small>
                                </div>
                                <div class="col-3">
                                    <small class="mb-1">Verein</small>
                                </div>
                                <div class="col-2 text-center">
                                    <small class="mb-1">Teams</small>
                                </div>
                                <div class="col-2 text-center">
                                    <small class="mb-1">Schützen</small>
                                </div>
                                <div class="col">
                                    <small class="mb-1">Schüsse</small>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <small class="mb-1">@DateTime.Now</small>
                                </div>
                                <div class="col-3">
                                    <h5 class="mb-1">x10</h5>
                                </div>
                                <div class="col-2 text-center">
                                    <h5 class="mb-1">@match.Teams.Count</h5>
                                </div>
                                <div class="col-2 text-center">
                                    <h5 class="mb-1">x20</h5>
                                </div>
                                <div class="col">
                                    <div class="progress" style="height: 20px">
                                        <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
            <p></p>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>